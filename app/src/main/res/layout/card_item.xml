<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp">

        <ImageView
            android:id="@+id/imageProductCard"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/im_ketchup" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/titleProductInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_rounded"
                android:text="Kissan tomoto Ketchup"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productAmountWithDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham_rounded"
                    android:padding="6dp"
                    android:text="₹150"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/productAmountTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham_rounded"
                    android:padding="6dp"
                    android:text="₹200"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/productDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F30000"
                    android:fontFamily="@font/gotham_rounded"
                    android:padding="6dp"
                    android:text="25% OFF"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:background="@drawable/background_add_remove_button"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/itemMinusButton"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_round_button"
                        android:src="@drawable/ic_remove_black_24dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/itemCoutnButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="8dp"
                        android:fontFamily="@font/gotham_rounded"
                        android:gravity="center"
                        android:text="Add"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <ImageButton
                        android:id="@+id/itemPlusButton"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_round_button"
                        android:src="@drawable/ic_add_24dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>