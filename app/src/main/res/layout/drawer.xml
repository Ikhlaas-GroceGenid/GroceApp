<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:minWidth="270dp"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Welcome"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:background="#dedede"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="7503381028"
        android:id="@+id/number"
        android:padding="16dp"
        android:drawableStart="@drawable/ic_smartphone"
        android:drawablePadding="10dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:background="#f5f5f5"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirana List"
        android:padding="16dp"
        android:id="@+id/kirana"
        android:drawableStart="@drawable/ic_shopping_list"
        android:drawablePadding="10dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Most Loved Items"
        android:padding="16dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_heart"
        android:textColor="#000000"
        android:gravity="center_vertical"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Cart"
        android:padding="16dp"
        android:id="@+id/cart"
        android:drawableStart="@drawable/ic_supermarket"
        android:drawablePadding="10dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Orders"
        android:id="@+id/orders"
        android:drawableStart="@drawable/ic_check_list"
        android:drawablePadding="10dp"
        android:padding="16dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Support"
        android:id="@+id/support"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_support"
        android:padding="16dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share"
            android:id="@+id/share"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_share"
            android:padding="16dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Logout"
        android:id="@+id/logout"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@color/colorPrimary"
        />


</RelativeLayout>